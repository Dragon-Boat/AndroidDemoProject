<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sundae.zl.androiddemoproject.HomeActivity"
    tools:showIn="@layout/app_bar_home">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="312dp"
        android:layout_height="495dp"
        android:overScrollMode="always"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@drawable/divider"
            android:dividerPadding="@dimen/divider_padding"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:showDividers="middle">

            <Button
                android:id="@+id/recyclerview_btn"

                style="@style/Widget.Normal.Button"
                android:text="RecyclerView" />

            <Button
                android:id="@+id/fragment_btn"

                style="@style/Widget.Normal.Button"
                android:text="fragment" />

            <Button
                android:id="@+id/vlayout_demo_btn"

                style="@style/Widget.Normal.Button"
                android:text="vlayoutDemo" />

            <Button
                android:id="@+id/webview_btn"
                style="@style/Widget.Normal.Button"
                android:text="webView" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>
